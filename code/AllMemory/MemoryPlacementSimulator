import java.util.*;

public class MemoryPlacementSimulator {

    static Scanner sc = new Scanner(System.in);

    public static void main(String[] args) {
        System.out.print("Enter number of memory blocks: ");
        int m = sc.nextInt();
        int[] blockSize = new int[m];
        System.out.println("Enter size of each memory block:");
        for (int i = 0; i < m; i++) blockSize[i] = sc.nextInt();

        System.out.print("\nEnter number of processes: ");
        int n = sc.nextInt();
        int[] processSize = new int[n];
        System.out.println("Enter size of each process:");
        for (int i = 0; i < n; i++) processSize[i] = sc.nextInt();

        System.out.println("\n===== Memory Placement Simulator =====");
        System.out.println("11. Best Fit and First Fit");
        System.out.println("12. Best Fit and Worst Fit");
        System.out.println("13. First Fit and Next Fit");
        System.out.println("14. First Fit and Worst Fit");
        System.out.print("Enter your choice (11â€“14): ");
        int choice = sc.nextInt();

        switch (choice) {
            case 11:
                bestFit(copy(blockSize), processSize);
                firstFit(copy(blockSize), processSize);
                break;
            case 12:
                bestFit(copy(blockSize), processSize);
                worstFit(copy(blockSize), processSize);
                break;
            case 13:
                firstFit(copy(blockSize), processSize);
                nextFit(copy(blockSize), processSize);
                break;
            case 14:
                firstFit(copy(blockSize), processSize);
                worstFit(copy(blockSize), processSize);
                break;
            default:
                System.out.println("Invalid choice!");
        }
    }

    // ---------- FIRST FIT ----------
    static void firstFit(int[] blocks, int[] process) {
        int m = blocks.length, n = process.length;
        int[] allocate = new int[n];
        Arrays.fill(allocate, -1);

        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (blocks[j] >= process[i]) {
                    allocate[i] = j;
                    blocks[j] -= process[i];
                    break;
                }
            }
        }
        System.out.println("\n=== First Fit Allocation ===");
        printAllocation(process, allocate);
    }

    // ---------- BEST FIT ----------
    static void bestFit(int[] blocks, int[] process) {
        int m = blocks.length, n = process.length;
        int[] allocate = new int[n];
        Arrays.fill(allocate, -1);

        for (int i = 0; i < n; i++) {
            int bestIdx = -1;
            for (int j = 0; j < m; j++) {
                if (blocks[j] >= process[i]) {
                    if (bestIdx == -1 || blocks[j] < blocks[bestIdx]) {
                        bestIdx = j;
                    }
                }
            }
            if (bestIdx != -1) {
                allocate[i] = bestIdx;
                blocks[bestIdx] -= process[i];
            }
        }
        System.out.println("\n=== Best Fit Allocation ===");
        printAllocation(process, allocate);
    }

    // ---------- WORST FIT ----------
    static void worstFit(int[] blocks, int[] process) {
        int m = blocks.length, n = process.length;
        int[] allocate = new int[n];
        Arrays.fill(allocate, -1);

        for (int i = 0; i < n; i++) {
            int worstIdx = -1;
            for (int j = 0; j < m; j++) {
                if (blocks[j] >= process[i]) {
                    if (worstIdx == -1 || blocks[j] > blocks[worstIdx]) {
                        worstIdx = j;
                    }
                }
            }
            if (worstIdx != -1) {
                allocate[i] = worstIdx;
                blocks[worstIdx] -= process[i];
            }
        }
        System.out.println("\n=== Worst Fit Allocation ===");
        printAllocation(process, allocate);
    }

    // ---------- NEXT FIT ----------
    static void nextFit(int[] blocks, int[] process) {
        int m = blocks.length, n = process.length;
        int[] allocate = new int[n];
        Arrays.fill(allocate, -1);
        int j = 0;

        for (int i = 0; i < n; i++) {
            int count = 0;
            while (count < m) {
                if (blocks[j] >= process[i]) {
                    allocate[i] = j;
                    blocks[j] -= process[i];
                    break;
                }
                j = (j + 1) % m;
                count++;
            }
        }
        System.out.println("\n=== Next Fit Allocation ===");
        printAllocation(process, allocate);
    }

    // ---------- UTILITIES ----------
    static void printAllocation(int[] process, int[] allocate) {
        System.out.println("Process No.\tProcess Size\tBlock No.");
        for (int i = 0; i < process.length; i++) {
            System.out.print("P" + (i + 1) + "\t\t" + process[i] + "\t\t");
            if (allocate[i] != -1)
                System.out.println((allocate[i] + 1));
            else
                System.out.println("Not Allocated");
        }
    }

    static int[] copy(int[] arr) {
        return Arrays.copyOf(arr, arr.length);
    }
}
